- breadcrumb :mypage
.user_mypage
  .user_mypage__container
    .user_mypage__container__main
      .user_mypage__container__main__user_info
        = link_to "#", class: 'user_mypage__container__main__user_info__link' do
          %figure
            = image_tag "ねこ2.jpeg", width: "60", height: "60"
          %h2.user_mypage__container__main__user_info__link__user-name yukari
          .user_mypage__container__main__user_info__link__count
            .user_mypage__container__main__user_info__link__count__rating
              評価
              %span 6
            .user_mypage__container__main__user_info__link__count__listing
              出品数
              %span 13
      .user_mypage__container__main__notification_todo
        .user_mypage__container__main__notification_todo__tabs
          %input#information_tab{checked: "checked", name: "tab_product", type: "radio"}/
          %label.tab_product{for: "information_tab"} お知らせ

          %input#todo_tab{name: "tab_product", type: "radio"}/
          %label.tab_product{for: "todo_tab"} やることリスト

          #information_content.user_mypage__container__main__notification_todo__tabs__content
            %ul.user_mypage__container__main__notification_todo__tabs__content__list
              %li.user_mypage__container__main__notification_todo__tabs__content__list__product
                = link_to "#", class: 'user_mypage__container__main__notification_todo__tabs__content__list__product__link' do
                  %figure
                    =image_tag "mercari_icon.png", class: "user_mypage__container__main__notification_todo__tabs__content__list__product__link__icon"
                  .user_mypage__container__main__notification_todo__tabs__content__list__product__link__body
                    .user_mypage__container__main__notification_todo__tabs__content__list__product__link__body__text テキスト
                    %time
                      %i.far.fa-clock
                      %span 20時間前
                  %i.fas.fa-chevron-right

              %li.user_mypage__container__main__notification_todo__tabs__content__list__product
                = link_to "#", class: 'user_mypage__container__main__notification_todo__tabs__content__list__product__link' do
                  %figure
                    =image_tag "mercari_icon.png", class: "user_mypage__container__main__notification_todo__tabs__content__list____link__icon"
                  .user_mypage__container__main__notification_todo__tabs__content__list__product__link__body
                    .user_mypage__container__main__notification_todo__tabs__content__list__product__link__body__text テキスト
                    %time
                      %i.far.fa-clock
                      %span 20時間前
                  %i.fas.fa-chevron-right

              %li.user_mypage__container__main__notification_todo__tabs__content__list__go-list
                = link_to "#", class: 'user_mypage__container__main__notification_todo__tabs__content__list__go-list__link' do
                  一覧を見る
          
          #todo_content.user_mypage__container__main__notification_todo__tabs__content
            .user_mypage__container__main__notification_todo__tabs__content__todo_list
              %p 現在やることはありません
      
      .user_mypage__container__main__buyed_products
        %h2.user_mypage__container__main__buyed_products__title
          購入した商品
        .user_mypage__container__main__buyed_products__tabs
          %a.user_mypage__container__main__buyed_products__tabs__btn
            取引中
          %a.user_mypage__container__main__buyed_products__tabs__btn
            過去の取引
          
          .user_mypage__container__main__buyed_products__tabs__content
            取引中の商品がありません
          .user_mypage__container__main__buyed_products__tabs__content
            過去に取引した商品がありません

          %script{crossorigin: "anonymous", integrity: "sha256-2Kok7MbOyxpgUVvAk/HJ2jigOSYS2auK4Pfzbm7uH60=", src: "https://code.jquery.com/jquery-3.3.1.js"}
          :javascript
            $(document).on("turbolinks:load", function () {
              $('.user_mypage__container__main__buyed_products__tabs__content').hide();
              $('.user_mypage__container__main__buyed_products__tabs__content').eq(0).show();
              $('.user_mypage__container__main__buyed_products__tabs__btn').eq(0).addClass('is-active');
              
              $('.user_mypage__container__main__buyed_products__tabs__btn').each(function () {
                $(this).on('click', function () {
                  var index = $('.user_mypage__container__main__buyed_products__tabs__btn').index(this);
                  $('.user_mypage__container__main__buyed_products__tabs__btn').removeClass('is-active');
                  $(this).addClass('is-active');
                  $('.user_mypage__container__main__buyed_products__tabs__content').hide();
                  $('.user_mypage__container__main__buyed_products__tabs__content').eq(index).show();
                });
              });
            });
            

            
    
    =render partial: "users/user_side_menu"
