%header
  = link_to(root_path) do
    = image_tag "logo.svg", width: "185", height: "49", class: "header__logo-img"
.login
  .login__info-container
    %p アカウントをお持ちでない方はこちら
    .login__btn_container
      = link_to new_user_registration_path, class: "new-register" do
        .user__btn_new
          新規会員登録
    %br
    %br
    .user__btn_fb
      = image_tag 'facebook_icon.png', size: "35x35", class: "facebook-icon"
      = link_to "Facebookでログイン", "#", class: "new-register", method: :post
    .user__btn_google
      = image_tag 'google_icon.png', size: "37x37", class: "google-icon"
      = link_to "Googleでログイン", "#", class: "google-register", method: :post
    %br
    %br
    = form_for(resource, as: resource_name, url: user_session_path) do |f|
      = f.email_field :email, autofocus: true, placeholder: 'メールアドレス', class: 'text_field'
      = f.password_field :password, autocomplete: "off", placeholder: 'パスワード', class: 'text_field'
      = recaptcha_tags
      = f.submit 'ログイン', class: 'redbtn'


  %br
  %br
  %p.blue パスワードをお忘れの方

= render partial: 'products/product_footer'
